{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": ":\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s+$",
            "action": {
                "indent": "outdent"
            }
        }
    ],
}
